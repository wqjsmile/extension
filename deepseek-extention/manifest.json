{
    "manifest_version": 3,
  
    "name": "DeepSeek 快捷对话",
    "description": "快速访问 DeepSeek 聊天界面。",
    "version": "1.0",
  

    "permissions": ["scripting", "activeTab"],
  

    "action": {
      "default_icon": {
        "16": "icon_16x16.png",
        "32": "icon_32x32.png"
      },
      "default_title": "DeepSeek 聊天"
    },
  

    "icons": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    },
  

    "background": {
      "service_worker": "background.js"
    },
  

    "content_scripts": [
      {
        "matches": ["<all_urls>"], 
        "js": ["content.js"]         
      }
    ],
  

    "web_accessible_resources": [
      {
        "resources": ["styles.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  